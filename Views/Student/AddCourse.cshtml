@using LabW06StudentGrades.Models.ViewModels
@model NotEnrolledVM

@{
   ViewData["Title"] = $"Adding course to {Model.Student.FirstName} {Model.Student.LastName}";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
   <thead>
      <tr>
         <th>
            Course
         </th>
         <th></th>
      </tr>
   </thead>
   <tbody>
      @foreach (var item in Model.Courses)
      {
         <tr>
            <td>
               @item.Code@item.Number
            </td>
            <td>
               <form asp-action="EnrollInCourse">
                  <input type="hidden" name="studentId" value="@Model.Student.ENumber" />
                  <input type="hidden" name="courseCode" value="@item.Code" />
                  <input type="hidden" name="courseNumber" value="@item.Number" />
                  <input type="submit" value="Add" class="btn btn-sm btn-outline-warning" />
               </form>
            </td>
         </tr>
      }
   </tbody>
</table>
